<h1>Eat-Da_Burger</h1>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>


<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> burgers/burger-block sleep=true}}
    {{/if}}
  {{/each}}
</ul>


<form class="create-form">

  <div class="form-group">
    <label for="ca">Enter the burger you would like to eat</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Submit</button>
</form>